generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  phone          String   @unique
  password             String
  neibor            String
  municipaly         String
  group             Int
  frequency        String
  deliveryMethod     String
  deliveryAddress   String?
  payment         String
  paymentModel   String
  cautions        Json?
  newsletter        Boolean  @default(false)

  createdAt         DateTime @default(now())
   subscritions Subscritions[]
}
model Plan {
  id String @id @default(uuid())
  plan String
  price String
  description String
  subscritions Subscritions[]
   createdAt         DateTime @default(now())
}

model Subscritions{
  id String @id @default(uuid())
  planId String
  userId String
  user User    @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId],references: [id])
  createdAt         DateTime @default(now())
}
